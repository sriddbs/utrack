<%= form_tag(members_path, :method => 'get') do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search], placeholder: 'Search' %>
    <div>
      <%= button_tag 'Search' %>
    </div>
  </div>
<% end %>

<p><%= link_to 'Add new Member', new_member_path %></p>
<table>
  <thead>
    <th>Name</th>
    <th>Website</th>
    <th></th>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= link_to website_short_url(member.url_key), member_website_path(member.url_key), target: '_blank' %></td>
        <td><%= link_to 'View Profile', profile_member_path(member) %></td>
      </tr>
    <% end %>
    <%= will_paginate @members %>
  </tbody>
</table>
