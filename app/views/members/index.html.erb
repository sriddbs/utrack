<%= form_tag(members_path, :method => 'get') do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search], placeholder: 'Search' %>
    <div>
      <%= button_tag 'Search' %>
    </div>
  </div>
<% end %>

<p><%= link_to 'Add new Member', new_member_path %></p>

<% if params[:search].present? %>
  <%= render partial: 'search_results', members: @members %>
<% else %>
  <%= render partial: 'all_members', members: @members %>
<% end %>
